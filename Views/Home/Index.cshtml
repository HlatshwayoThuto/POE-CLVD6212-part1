@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="p-5 mb-4 bg-light rounded-3 shadow-sm">
    <div class="container-fluid py-5 text-center">
        <h1 class="display-4 fw-bold">
            <i class="fas fa-store text-primary"></i> Welcome to ABC Retailers
        </h1>
        <p class="lead mt-3">
            Your one-stop shop for quality products, exceptional customer service, and reliable order management.
        </p>
        <a class="btn btn-primary btn-lg mt-3" asp-controller="Product" asp-action="Index">
            <i class="fas fa-box"></i> Browse Products
        </a>
    </div>
</div>

<!-- Features Section -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h4 class="fw-bold">Manage Customers</h4>
                    <p class="text-muted">Easily add, update, and manage customer information.</p>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        Go to Customers
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-box fa-3x text-success mb-3"></i>
                    <h4 class="fw-bold">Track Products</h4>
                    <p class="text-muted">Keep an eye on your product inventory and details.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-success btn-sm">
                        Go to Products
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-shopping-cart fa-3x text-warning mb-3"></i>
                    <h4 class="fw-bold">Process Orders</h4>
                    <p class="text-muted">Handle customer orders with efficiency and ease.</p>
                    <a asp-controller="Order" asp-action="Index" class="btn btn-outline-warning btn-sm">
                        Go to Orders
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Mission Statement / About -->
<div class="bg-dark text-white py-5 mt-5">
    <div class="container text-center">
        <h2 class="fw-bold">Why Choose ABC Retailers?</h2>
        <p class="mt-3">
            At ABC Retailers, we pride ourselves on offering the best customer experience with high-quality products
            and a seamless ordering process. Whether you're managing customers, browsing products, or processing orders —
            we make retail management simple and effective.
        </p>
    </div>
</div>
